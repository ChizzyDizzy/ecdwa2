# Server Configuration
PORT=3005
NODE_ENV=development
SERVICE_NAME=payment-service

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cloudretail_payments
DB_USER=postgres
DB_PASSWORD=postgres
DB_SSL=false

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h

# Event Bus
EVENT_BUS_URL=http://localhost:4000/events

# Service URLs
ORDER_SERVICE_URL=http://localhost:3003

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
VALID_API_KEYS=your-api-key-1,your-api-key-2

# GDPR
REGION=EU
PRIVACY_POLICY_URL=https://cloudretail.com/privacy

# PCI DSS Compliance
PCI_COMPLIANT=true

# Payment Gateway Configuration (for production)
PAYMENT_GATEWAY_URL=https://api.paymentgateway.com
PAYMENT_GATEWAY_API_KEY=your-gateway-api-key
PAYMENT_GATEWAY_SECRET=your-gateway-secret

# Logging
LOG_LEVEL=info
